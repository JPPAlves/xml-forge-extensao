{
  "manifest_version": 3,
  "name": "XML FORGE",
  "version": "1.0.1",
  "description": "Ferramenta de Apoio para Desenvolvedores com Funções de Formatação, Conversão e Validação de XML.",
  "permissions": [
    "storage",
    "clipboardWrite",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
